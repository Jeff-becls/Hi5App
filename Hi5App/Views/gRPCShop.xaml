<Page x:Class="Hi5App.Views.gRPCShop"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hi5App.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="gRPCShop">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <Button x:Name="gRPCStartButton" Margin="4" Click="gRPCStartButton_Click">Sample gRPC</Button>

            <Button x:Name="gRPCServerStreamButton" Margin="4" Click="gRPCServerStreamButton_Click">Server Stream</Button>
        </StackPanel>

        <TextBox x:Name="ResultTextBox" Grid.Column="1" Background="Azure"></TextBox>
    </Grid>
</Page>
